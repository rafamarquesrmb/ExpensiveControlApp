@model ExpensiveControlApp.Models.Expensives.Expensive

@{
    ViewData["Title"] = "Deletar Despesa";
}

<form asp-action="Delete">
    <h1>Deletar</h1>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>


    <div class="row mb-3">
        <div class="col-md-12">
            <div class="form-group">
                <p>Você tem certeza que deseja deletar a tarefa abaixo?</p>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-2">
            <div class="form-group">
                <h3>ID</h3>
            </div>
        </div>
        <div class="col-md-10">
            <div class="form-group">
                <p>@Model.Id</p>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-2">
            <div class="form-group">
                <h3>Descrição</h3>
            </div>
        </div>
        <div class="col-md-10">
            <div class="form-group">
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-2">
            <div class="form-group">
                <h3>Data</h3>
            </div>
        </div>
        <div class="col-md-10">
            <div class="form-group">
                <p>@Model.Date</p>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-2">
            <div class="form-group">
                <h3>Valor</h3>
            </div>
        </div>
        <div class="col-md-10">
            <div class="form-group">
                <p>@Model.Value</p>
            </div>
        </div>
    </div>
    

    <div class="d-flex flex-row-reverse">
        <div class="d-inline p-2">
            <button type="submit" class="btn btn-danger btn-login text-uppercase fw-bold">Deletar</button>
        </div>
        <div class="d-inline p-2">
            <a asp-action="Index" class="btn btn-secondary btn-login text-uppercase fw-bold">Voltar</a>
        </div>
        
    </div>
</form>